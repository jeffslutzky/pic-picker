<center>
  <nav class="navbar navbar-default">
    <h1 class="hide-font">PicPicker</h1>
  </nav>

<h1 class="hide-font2">Which is your favorite?	</h1>



<table>
<%=form_tag(comparisons_path) do %>
<tr>
  <td>
    <img class="animated bounceInRight " src="<%=@selected_pics[0].photo_url%>" style="width:320px;">
  </td>
  <td>
    <img class="animated bounceInLeft" src="<%=@selected_pics[1].photo_url%>" style="width:320px;">
  </td>
</tr>
<tr>
  <td>
    <%= radio_button_tag :id, @selected_pics[0].id%>
  </td>
  <td>
    <%= radio_button_tag :id, @selected_pics[1].id%>
  </td>
</tr>




</table>
<%=submit_tag("Submit", :class=>"hide-btn")%>
<%end%>
</center>

<%= hidden_field_tag 'comparison_id', @selected_pics[0].comparison_id %>
<%= hidden_field_tag 'id1', @selected_pics[0].id %>
<%= hidden_field_tag 'id2', @selected_pics[1].id %>
